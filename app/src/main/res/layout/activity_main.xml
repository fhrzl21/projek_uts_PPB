<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_margin="8dp"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#058510"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/handshake"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Silahturahmi"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/website"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:text="Website"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/email"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:text="Mail"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/telephone"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:text="Telpon"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layanan Kami"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:textColor="#058510"
            android:fontFamily="sans-serif-condensed-medium"/>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/splash"/>
                <TextView
                    android:layout_below="@id/logo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam'iyyah Ruqyah Aswaja"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user"/>
                <TextView
                    android:layout_below="@id/logo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnosa
                     Diri"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/list"/>
                <TextView
                    android:layout_below="@id/logo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruqyah \nMandiri"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/quran"/>
                <TextView
                    android:layout_below="@id/logo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Al-quran     \n"
                    android:textSize="10dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/books"/>
                <TextView
                    android:layout_below="@id/logo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kitab  \n"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lantern"/>
                <TextView
                    android:layout_below="@id/logo6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayat Ruqyah\n"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo7"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/beads"/>
                <TextView
                    android:layout_below="@id/logo7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dzikir\n"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_rounded_stroke"
                android:padding="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo8"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/moon"/>
                <TextView
                    android:layout_below="@id/logo8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ziarah Wali Songo"
                    android:textSize="10dp"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#e0e0e0"
            android:layout_marginTop="16dp">
        </View>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="56dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/banner"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#e0e0e0"
            android:layout_marginTop="16dp">
        </View>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="56dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/banner_dua"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>